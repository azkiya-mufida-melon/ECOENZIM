<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pemantauanecoenzim"> <!-- Pastikan nama package sesuai project kamu -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PemantauanEcoenzim"
        tools:targetApi="31">

        <!-- SplashActivity sebagai launcher utama -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity, ditampilkan setelah splash -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- bg_temperature_box bukan Activity, harus DIHAPUS kalau cuma layout -->
        <!-- Kalau ini file XML drawable/layout, tidak perlu dideklarasikan di manifest -->

    </application>

</manifest>
