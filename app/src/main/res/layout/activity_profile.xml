<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"> <!-- Ini warna hijau pastel -->


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/fotoProfil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_bg"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />

                <ImageView
                    android:id="@+id/iconEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="#66BB6A"
                    android:contentDescription="Edit Nama"
                    android:src="@drawable/ic_edit" />
            </FrameLayout>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nadia"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Masukkan nama baru"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSimpanNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#4CAF50"
                android:text="Simpan Nama"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Email: nadia@example.com"
                android:textColor="#141313"
                android:textSize="16sp" />

            <Button
                android:id="@+id/aboutBtn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="19dp"
                android:background=""
                android:text="Eco Enzyme"
                android:textColor="#0D0C0C" />
            >

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#66BB6A"
                android:text="Logout"
                android:textColor="#141212" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
